// a two room two robot scenario 
// since I will be hard coding most of this I will only put down the stuff for a single robot 
// the actual scenario 
// _/0 | 3\_ 
//   |   |
//   1---2
// _/ = door \_ = door  
// | = edge or wall (wall between 0 and 3, edges between 0,1 and 2,3 and 1,2)
// Robot 1 = 1, Robot 2 = 2 
//this is for robot 1 
// no probabilities , doors are always open 
// uniform cost called time 

mdp


module world

       s:[0..3] init 1; 
       
       [v0_v1] (s=0) -> (s'=1); 
       [v1_v2] (s=1) -> (s'=2); 
       [v2_v3] (s=2) -> (s'=3); 

       [v3_v2] (s=3) -> (s'=2); 
       [v2_v1] (s=2) -> (s'=1); 
       [v1_v0] (s=1) -> (s'=0); 
       

endmodule 

rewards "time"

	
       [v0_v1] (s=0) : 1.0; 
       [v1_v2] (s=1) : 1.0; 
       [v2_v3] (s=2) : 1.0; 

       [v3_v2] (s=3) : 1.0; 
       [v2_v1] (s=2) : 1.0; 
       [v1_v0] (s=1) : 1.0; 

endrewards


