//another mdp from the paper 

mdp 

module M1 

	s : [0..5] init 0; 
	
	[east] s=0 -> 0.6:(s'=1) + 0.4:(s'=0); 
	[south] s=0 -> 0.1:(s'=1) + 0.1:(s'=4) + 0.8:(s'=3); 
	[east] s=1 -> (s'=2); 
	[south] s=1 -> 0.5:(s'=4) + 0.5:(s'=2);
	[stuck] s=2 -> (s'=2); 
	[stuck] s=3 -> (s'=3); 
	[west] s=4 -> 0.6:(s'=3) + 0.4:(s'=4); 
	[east] s=4 -> (s'=5);
	[west] s=5 -> (s'=4); 
	[north] s=5 -> 0.9:(s'=2) + 0.1:(s'=5);	
	

endmodule

label "goal1" = s=5; 
label "goal2" = s=3 | s=2;
label "hazard" = s=1;

